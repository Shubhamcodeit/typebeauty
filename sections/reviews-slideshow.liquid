<div class="video-reviews-outer">
 
  {% for block in section.blocks %} 
  <div class="video-reviews-inner">
    
  <div class="in-vid-flex">
    <div class="in-vid-first">
      
      <h3>{{ block.settings.heading }}</h3>
      <p class="whole-review">{{ block.settings.reviewtext }}</p>
      <p class="whole-review abd">{{ block.settings.reviewtextmore }}</p>
        <a class="rmore button button--underline" href="javascript:void(0);">READ MORE <span style="position: relative;" class="svg svg__arrow" aria-hidden="true"><svg aria-hidden="true" focusable="false" role="presentation" enable-background="new -19 23 66 16" viewBox="-19 23 66 16" xmlns="http://www.w3.org/2000/svg"><path d="m-19 29.6h64v2.9h-64z"></path><path d="m47 31-2-2-6-6-2 2 5.9 6-5.9 6 2 2 6-6z"></path></svg></span>
      </a>
      
    </div>
    <div class="in-vid-second">
      <video width="100%" height="100%" controls autoplay muted loop>
  <source src="{{ block.settings.videolink }}" type="video/mp4">
Your browser does not support the video tag.
</video>
    
    </div>
  </div>
  </div>
    {% endfor %}

</div>
<script>
 
  $(document).ready(function() {
    $('.rmore').on('click', function() {
      $('.abd').slideToggle();
      var linkText = $(this).text();
      $(this).text(linkText == 'Read More' ? 'Read Less' : 'Read More');
    });
  });
</script>
<style>
.abd{
  display: none;
}
  .video-reviews-outer p{
    font-family: Inter;
    font-weight: 600;
    font-size: 1.2vw!important;
    line-height: 47px!important;
    letter-spacing: .05em!important;
  }
  .video-reviews-outer h3{
    margin-top: 0!important;
    font-family: Inter;
    font-style: italic;
    font-weight: 900;
    font-size: 3.47vw!important;
    line-height: 80px!important;
    max-width: 700px;
    letter-spacing: .05em!important;
    text-transform: uppercase;
  }
  .video-reviews-outer .slick-slide {
    display: block;
    padding: 0 10px;
  }
  .video-reviews-outer{
    max-width: 86%;
    margin: auto;
    padding: 2em 0;
  }
  .in-vid-flex{
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }
  .in-vid-first{
    width: 45%;
    text-align: left;
  }
  .in-vid-second{
    width: 35%;
  }
   .video-reviews-outer a{
     margin-bottom: 20px;
    display: block;
    font-weight: 800;
    text-decoration: underline;
     border: none!important;
   }
  @media only screen and (max-width: 768px) {
    .video-reviews-outer{
    }
  .in-vid-flex {
       flex-direction: column-reverse;
  }
    .in-vid-first, .in-vid-second{
      width: 100%;
      margin-bottom: 20px;
    }
    .video-reviews-outer p{
    font-family: Inter;
    font-weight: 600;
    font-size: 3.6vw!important;
    line-height: 32px!important;
    letter-spacing: .05em!important;
  }
  .video-reviews-outer h3{
    margin-top: 0!important;
    font-family: Inter;
    font-style: italic;
    font-weight: 900;
    font-size: 6.47vw!important;
    line-height: 23px!important;
    letter-spacing: .05em!important;
    text-transform: uppercase;
  }
    
}
</style>
