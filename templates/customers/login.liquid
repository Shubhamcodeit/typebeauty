<div class="login-signup-container">
  <div class="inner-boxes-accounts first">
  <div class="shopify-section section-w-mobile-padding" id="section-login">

  <div class="section-header five-tenths lap--full-width push-left-one-tenth lap--push-left-none">
  	<h1 id="LoginRecoverTitle" class="section-header__title h1" data-password_recovery="{{ 'customer.recover_password.title' | t }}" data-login="{{ 'customer.login.title' | t }}">sign into account</h1>
  </div>

  <div class="grid five-tenths lap--full-width push-left-one-tenth lap--push-left-none">

		<div id="ResetSuccess" style="display:none;">
	    {%- liquid
        assign success_text = 'customer.recover_password.success' | t
        render 'form-success', text: success_text
	    -%}
		</div>

    <div id="CustomerLoginForm">

      {%- form 'customer_login', class: 'simple-grid' -%}

    		<div class="simple-grid-item one-whole">{%- render 'form-errors', form: form -%}</div>

        <div class="simple-grid-item one-whole">
          <label for="CustomerEmail" class="text-size--small">{{ 'customer.login.email' | t }}</label>
          <input type="email" name="customer[email]" id="CustomerEmail" class="input-full{% if form.errors contains 'email' %} error{% endif %}" placeholder="{{ 'customer.login.email' | t }}" autocorrect="off" autocapitalize="off" autofocus>
        </div>

        <div class="simple-grid-item one-whole">
          {%- if form.password_needed -%}
            <label for="CustomerPassword" class="text-size--small">{{ 'customer.login.password' | t }}</label>
            <input type="password" value="" name="customer[password]" id="CustomerPassword" class="input-full{% if form.errors contains 'password' %} error{% endif %}" placeholder="{{ 'customer.login.password' | t }}">
          {%- endif -%}
        </div>

        <div class="simple-grid-item one-whole">

          <input type="submit" class="button button--solid button--fit" value="{{ 'customer.login.sign_in' | t }}" style="margin-right: 25px;">

          <div class="rte">
            {%- if form.password_needed -%}
              <p style="margin-bottom:.5em"><a href="#recover" id="RecoverPassword">{{ 'customer.login.forgot_password' | t }}</a></p>
            {%- endif -%}
          
          </div>

        </div>

      {%- endform -%}

    </div>

    <div id="RecoverPasswordForm" style="display: none;">

      {%- form 'recover_customer_password', class: 'simple-grid' -%}

        {%- if form.posted_successfully? -%}
          {%- assign resetPassword = true -%}
        {%- endif -%}

        <p class="simple-grid-item one-whole h4" style="margin-bottom:2em">{{ 'customer.recover_password.subtext' | t }}</p>

    		<div class="simple-grid-item one-whole">{%- render 'form-errors', form: form -%}</div>

        <div class="simple-grid-item one-whole">
          <label for="RecoverEmail" class="text-size--small">{{ 'customer.recover_password.email' | t }}</label>
          <input type="email" value="" name="email" id="RecoverEmail" class="input-full" placeholder="{{ 'customer.recover_password.email' | t }}" autocorrect="off" autocapitalize="off">
        </div>

        <div class="simple-grid-item one-whole">
          <input type="submit" class="button button--solid button--fit" value="{{ 'customer.recover_password.submit' | t }}">
        </div>

        <div class="simple-grid-item one-whole push-a-bit">
          <button style="border-bottom:1px solid" type="button button--solid button--fit" id="HideRecoverPasswordLink" class="text-link">{{ 'customer.recover_password.cancel' | t }}</button>
        </div>

      {%- endform -%}

    </div>

    {%- if shop.checkout.guest_login -%}

      {%- form 'guest_login', class: 'simple-grid' -%}
        <div class="simple-grid-item one-whole">
        	<input type="submit" class="button button--solid button--fit" value="{{ 'customer.login.guest_continue' | t }}">
        </div>
      {%- endform -%}

    {%- endif -%}

  </div>

</div>
  </div>
  <div class="inner-boxes-accounts">
  <div class="shopify-section  section-w-mobile-padding"  id="section-register" >

  <div class="section-header five-tenths lap--full-width push-left-one-tenth lap--push-left-none">
  	<h1 class="section-header__title h1 create">create an account</h1>
  </div>

  <div class="grid five-tenths lap--full-width push-left-one-tenth lap--push-left-none">

    {%- form 'create_customer', class: 'simple-grid' -%}

  		<div class="simple-grid-item one-whole">{%- render 'form-errors', form: form -%}</div>

      <div class="simple-grid-item one-whole">
        <label for="FirstName" class="text-size--small">{{ 'customer.register.first_name' | t }}</label>
        <input type="text" name="customer[first_name]" id="FirstName" class="input-full" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autocapitalize="words" autofocus>
      </div>

      <div class="simple-grid-item one-whole">
        <label for="LastName" class="text-size--small">{{ 'customer.register.last_name' | t }}</label>
        <input type="text" name="customer[last_name]" id="LastName" class="input-full" {% if form.last_name %}value="{{ form.last_name }}"{% endif %} autocapitalize="words">
      </div>

      <div class="simple-grid-item one-whole">
        <label for="Email" class="text-size--small">{{ 'customer.register.email' | t }}</label>
        <input type="email" name="customer[email]" id="Email" class="input-full{% if form.errors contains 'email' %} error{% endif %}" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">
      </div>

      <div class="simple-grid-item one-whole">
        <label for="CreatePassword" class="text-size--small">{{ 'customer.register.password' | t }}</label>
        <input type="password" name="customer[password]" id="CreatePassword" class="input-full{% if form.errors contains 'password' %} error{% endif %}">
      </div>

      <div class="simple-grid-item one-whole">
        <input type="submit" value="create account" class="button button--solid button--fit">
      </div>

      

    {%- endform -%}

  </div>

</div>
  </div>

</div>


<style>
  .first{
  border-right: 1px solid #000000;
  }
  .inner-boxes-accounts{
  width: 50%;
  
  }
  .login-signup-container{
  display: flex;
    justify-content: space-between;
    align-items: stretch;
  }
  .section-header__title{
  font-family: Inter;
font-style: italic;
font-weight: 900;
font-size: 30px;
line-height: 179.2%;
/* identical to box height, or 54px */

text-transform: uppercase;

color: #FF3FB5;
  }
  .input-full{
  max-width: 458px;
    border: 1px solid #000;
  }
  .create{
  color: #FF8F1A;
  }
  .text-size--small{
  font-family: Inter;
font-style: italic;
font-weight: 600;
font-size: 15px;
line-height: 179.2%;
/* identical to box height, or 27px */


color: #000000;
  }
  @media only screen and (max-width: 768px) {
  .login-signup-container {
   display: block;
  }
    .inner-boxes-accounts{
    width: 100%;
    }
    .first {
     border-right: none;
    margin-bottom: 40px;
}
    .input-full{
    margin-bottom: 20px;
    }
}
</style>
{%- if resetPassword -%}
  <style type="text/css">
    #ResetSuccess { 
      display: block !important;
      margin-bottom: 1em;
    }
  </style>
{%- endif -%}

<script>
  document.getElementById('RecoverPassword').addEventListener('click', (e)=>{
    e.preventDefault();
    document.getElementById('RecoverPasswordForm').style.display = 'block';
  document.getElementById('CustomerLoginForm').style.display='none';                       
  });
  document.getElementById('HideRecoverPasswordLink').addEventListener('click', (e)=>{
    e.preventDefault();
  document.getElementById('RecoverPasswordForm').style.display = 'none';
  document.getElementById('CustomerLoginForm').style.display = 'block';               
  });
  if (window.location.hash == '#recover') { 
    document.getElementById('RecoverPasswordForm').style.display = 'block';
  document.getElementById('CustomerLoginForm').style.display='none';    
  }
</script>